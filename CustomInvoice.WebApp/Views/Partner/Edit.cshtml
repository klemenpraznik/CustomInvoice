                    <label asp-for="Partner.StreetNumber" class="control-label"></label>
                    <input asp-for="Partner.StreetNumber" class="form-control" />
                    <span asp-validation-for="Partner.StreetNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Partner.PostNumber" class="control-label"></label>
