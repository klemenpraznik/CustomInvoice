@model CustomInvoice.WebApp.ViewModels.PartnerFormViewModel

@{
    ViewData["Title"] = "Edit";
}
@if (Model.Partner == null)
{
    <h1>Nov</h1>
}
else
{
    <h1>Uredi</h1>
}

<h4>PartnerFormViewModel</h4>
